---
import { CONTACT_INFO, LINKS } from "../lib/constants";
---

<section id="contacto" class="contacto">
  <h2 class="section-title">Contacto</h2>
  <div class="contact-wrap">
    <div class="social-icons">
      <a class="icon-link" href={LINKS.EMAIL} aria-label="Email">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="35"
          height="35"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="1.5"
          stroke-linecap="round"
          stroke-linejoin="round"
          ><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path
            d="M3 7a2 2 0 0 1 2 -2h14a2 2 0 0 1 2 2v10a2 2 0 0 1 -2 2h-14a2 2 0 0 1 -2 -2v-10"
          ></path><path d="M3 7l9 6l9 -6"></path></svg
        >
      </a>
      <a
        class="icon-link"
        href={LINKS.INSTAGRAM}
        target="_blank"
        rel="noopener noreferrer"
        aria-label="Instagram"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="35"
          height="35"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="1.5"
          stroke-linecap="round"
          stroke-linejoin="round"
          ><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path
            d="M4 8a4 4 0 0 1 4 -4h8a4 4 0 0 1 4 4v8a4 4 0 0 1 -4 4h-8a4 4 0 0 1 -4 -4l0 -8"
          ></path><path d="M9 12a3 3 0 1 0 6 0a3 3 0 0 0 -6 0"></path><path
            d="M16.5 7.5v.01"></path></svg
        >
      </a>
      <a
        class="icon-link"
        href={LINKS.WHATSAPP}
        target="_blank"
        rel="noopener noreferrer"
        aria-label="WhatsApp"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="35"
          height="35"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="1.5"
          stroke-linecap="round"
          stroke-linejoin="round"
          ><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path
            d="M3 21l1.65 -3.8a9 9 0 1 1 3.4 2.9l-5.05 .9"></path><path
            d="M9 10a.5 .5 0 0 0 1 0v-1a.5 .5 0 0 0 -1 0v1a5 5 0 0 0 5 5h1a.5 .5 0 0 0 0 -1h-1a.5 .5 0 0 0 0 1"
          ></path></svg
        >
      </a>
    </div>
  </div>
  <div class="contact-details">
    <p>
      Correo: <a href={LINKS.EMAIL} class="contact-detail-value"
        >{CONTACT_INFO.EMAIL}</a
      >
    </p>
    <p>
      Instagram: <a
        href={LINKS.INSTAGRAM}
        target="_blank"
        rel="noopener noreferrer"
        class="contact-detail-value">@{CONTACT_INFO.INSTAGRAM}</a
      >
    </p>
    <p>
      Teléfono: <a
        href={LINKS.PHONE}
        target="_blank"
        rel="noopener noreferrer"
        class="contact-detail-value">{CONTACT_INFO.PHONE}</a
      >
    </p>
  </div>
  <a
    class="whatsapp-btn"
    href={encodeURIComponent(
      `${LINKS.WHATSAPP}?text=Hola, me interesa tu servicio. ¿Podrías ayudarme?`
    )}
    target="_blank"
    rel="noopener noreferrer">Escríbeme por WhatsApp</a
  >
</section>

<style>
  .contacto {
    padding: 4rem 2rem;
    text-align: center;
  }

  .section-title {
    font-size: 1.75rem;
    color: var(--accent);
    margin: 0 0 2rem;
    font-weight: 600;
  }

  .contact-wrap {
    max-width: 400px;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1.5rem;
  }

  .social-icons {
    display: flex;
    gap: 1rem;
    justify-content: center;
  }

  .icon-link {
    color: var(--accent);
    transition: opacity 0.2s;
  }

  .icon-link:hover {
    opacity: 0.85;
  }

  .contact-details {
    color: var(--text);
    font-size: 0.95rem;
    line-height: 1.8;
    text-align: center;
    margin-top: 1.5rem;
  }

  .contact-details p {
    margin: 0;
  }

  .contact-detail-value {
    color: var(--accent);
    font-weight: 600;
  }

  .whatsapp-btn {
    display: inline-block;
    padding: 0.875rem 1.75rem;
    background: var(--accent);
    color: #000;
    text-decoration: none;
    font-weight: 600;
    border-radius: 4px;
    transition:
      opacity 0.2s,
      transform 0.2s;
    margin-top: 2rem;
  }

  .whatsapp-btn:hover {
    opacity: 0.9;
    transform: translateY(-1px);
  }
</style>
